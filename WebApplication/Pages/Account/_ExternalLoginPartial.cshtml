@using Microsoft.AspNetCore.Authentication
@model IList<AuthenticationScheme>

<section>
    <h4>Use another service to log in.</h4>
    <hr />
    @{
        if (Model.Count() == 0)
        {
            <div>
                <p>
                    There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                    for details on setting up this ASP.NET application to support logging in via external services.
                </p>
            </div>
        }
        else
        {
            <form asp-page="./ExternalLogin" method="post" class="form-horizontal">
                <div>
                    <p>
                        @foreach (var provider in Model)
                        {
                            if (provider.Name.Equals("superoffice", StringComparison.OrdinalIgnoreCase))
                            {
                                <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-secondary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                            }
                        }
                    </p>
                </div>
            </form>
        }
    }
</section>