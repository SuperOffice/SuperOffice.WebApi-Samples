@page
@model WebApplication.Pages.Account.ExternalLoginModel
@{
    ViewData["Title"] = "External Login Result";
}


<h2>@ViewData["Title"]</h2>
<hr />

<p class="text-info">
    You've successfully authenticated with <strong>@Model.LoginProvider</strong>.
</p>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                @{
                    if (Model.Claims != null)
                    {
                        <h2>Claims:</h2>
                        <table class="table table-dark table-hover">
                            <thead>
                                <tr>
                                    <th>Token Name</th>
                                    <th>Token Value</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var claim in Model.Claims)
                                {
                                    <tr>
                                        <td>@claim.Type</td>
                                        <td>@claim.Value</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        if (Model.Tokens != null)
                        {
                            <h2>Tokens:</h2>
                            <table class="table table-dark table-hover">
                                <thead>
                                    <tr>
                                        <th>Token Name</th>
                                        <th>Token Value</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var token in Model.Tokens)
                                    {
                                        <tr>
                                            <td>@token.Name</td>
                                            <td>@token.Value</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    }
                }
            </div>
        </div>
    </div>
</div>
